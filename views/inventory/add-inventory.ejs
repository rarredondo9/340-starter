<h1>Add Vehicle</h1>
<form action="/inv/add-inventory" method="POST">
  <label for="classificationList">Classification</label>
  <%- classificationSelect %>

  <label for="inv_make">Make:</label>
  <input name="inv_make" id="inv_make" type="text" value="<%= inv_make || '' %>" required>

  <label for="inv_model">Model:</label>
  <input name="inv_model" id="inv_model" type="text" value="<%= inv_model || '' %>" required>

  <!-- Add remaining inputs for year, price, description, etc., with similar structure -->

  <button type="submit">Add Vehicle</button>
</form>
<% if (messages.error) { %><p class="error"><%= messages.error %></p><% } %>
